# N42 Blockscout Environment Configuration
# Modify these values to match your N42 node deployment.

# N42 Node RPC endpoints
ETHEREUM_JSONRPC_HTTP_URL=http://host.docker.internal:8545/
ETHEREUM_JSONRPC_TRACE_URL=http://host.docker.internal:8545/
ETHEREUM_JSONRPC_WS_URL=ws://host.docker.internal:8546

# Chain configuration
CHAIN_ID=4242
COIN=N42
COIN_NAME=N42

# RPC variant: geth-compatible (reth implements the same interface)
ETHEREUM_JSONRPC_VARIANT=geth

# Internal transaction indexing via debug_traceTransaction with callTracer
INDEXER_INTERNAL_TRANSACTIONS_TRACER_TYPE=callTracer

# Database
DATABASE_URL=postgresql://blockscout:blockscout@db:5432/blockscout
SECRET_KEY_BASE=RMgI4C1HSkxsEjdhtGMfwAHfyT6CKWXOgzCboJflfSm4jeAlic52io05KB6mqzc5

# Frontend
NEXT_PUBLIC_NETWORK_NAME=N42
NEXT_PUBLIC_NETWORK_ID=4242
NEXT_PUBLIC_API_HOST=localhost
NEXT_PUBLIC_API_PORT=4000
NEXT_PUBLIC_API_PROTOCOL=http
NEXT_PUBLIC_STATS_API_HOST=http://localhost:8080

# Blockscout backend
BLOCKSCOUT_HOST=0.0.0.0
PORT=4000
POOL_SIZE=50
ECTO_USE_SSL=false
HEART_BEAT_TIMEOUT=60

# Indexer settings
INDEXER_MEMORY_LIMIT=4g
BLOCK_TRANSFORMER=base
FETCH_REWARDS_WAY=trace_block

# Smart contract verification
MICROSERVICE_SC_VERIFIER_ENABLED=true
MICROSERVICE_SC_VERIFIER_URL=http://smart-contract-verifier:8050/
MICROSERVICE_SC_VERIFIER_TYPE=sc_verifier

# Disable features not needed for N42
INDEXER_DISABLE_INTERNAL_TRANSACTIONS_FETCHER=false
INDEXER_DISABLE_PENDING_TRANSACTIONS_FETCHER=false
